<div class="container">
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <%= form_with(model: category, local: true, class: "mb-3") do |form| %>
        <div class="form-group">
          <%= form.label :code, class: 'form-control-label' %>
          <%= form.text_field :code, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :description, class: 'form-control-label' %>
          <%= form.text_field :description, class: 'form-control' %>
        </div>

        <div class="actions mt-3">
          <%= form.submit "Submit", class: 'btn btn-primary' %>
          <%= link_to 'Back', categories_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>